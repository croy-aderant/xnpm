{
  "name": "@croy-aderant/xnpm",
  "version": "1.0.2",
  "description": "npm proxy with change summaries for updates",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "xnpm": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postinstall": "npm run build && chmod +x dist/index.js || true",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "echo 'This package is GitHub-only and cannot be published to npm. Use: npm install -g github:croy-aderant/xnpm' && exit 1"
  },
  "private": true,
  "keywords": [
    "npm",
    "cli",
    "updates",
    "changelog",
    "security",
    "supply-chain",
    "package-manager",
    "diff",
    "changelog-parser"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/croy-aderant/xnpm.git"
  },
  "bugs": {
    "url": "https://github.com/croy-aderant/xnpm/issues"
  },
  "homepage": "https://github.com/croy-aderant/xnpm#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "diff": "^5.1.0",
    "semver": "^7.5.4",
    "tar": "^6.2.0"
  },
  "devDependencies": {
    "@types/diff": "^5.2.0",
    "@types/node": "^20.10.0",
    "@types/semver": "^7.5.6",
    "@types/tar": "^6.1.13",
    "@vitest/coverage-v8": "^1.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
